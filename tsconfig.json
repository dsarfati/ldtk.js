{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["ES2019", "dom", "es6"],
    "target": "esnext",
    "declaration": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "strict": true,
    "composite": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "preserveConstEnums": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*.ts", "../test/**/*.ldtk",]
}
